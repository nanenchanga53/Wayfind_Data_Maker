<UserControl x:Class="WayFinderTool.View.MenuControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WayFinderTool.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Grid Height="40">
                <Border Background="Black"/>
                <TextBlock Text="Menu" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="16"/>
            </Grid>
            <Button Content="Go Center" Command="{Binding ButtonGoCenter}" Height="40"/>
            <Button Content="Data Load" Command="{Binding Path=ButtonDataLoad}" Height="40"/>
            <Button Content="Data Save" Command="{Binding Path=ButtonDataSave}" Height="40"/>
            <Button Content="Image Load" Command="{Binding Path=ButtonImageLoad}" Height="40"/>
            <Button Content="Overlay Image Load" Command="{Binding Path=ButtonOverlayImageLoad}" Height="40"/>
        </StackPanel>
    </Grid>
</UserControl>
